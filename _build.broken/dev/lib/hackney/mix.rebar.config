{erl_opts,[debug_info,
           {platform_define,"R14",no_callback_support},
           {platform_define,"^[0-9]+",namespaced_types},
           {platform_define,"^R",no_proxy_sni_support}]}.
{xref_checks,[undefined_function_calls]}.
{cover_enabled,true}.
{eunit_opts,[verbose]}.
{post_hooks,[{clean,"rm -rf *~ */*~ */*.xfm test/*.beam"}]}.
{deps,[{idna,".*",
             {git,"https://github.com/benoitc/erlang-idna",{tag,"6.0.0"}}},
       {mimerl,".*",{git,"https://github.com/benoitc/mimerl",{tag,"1.0.2"}}},
       {certifi,".*",
                {git,"https://github.com/certifi/erlang-certifi",
                     {tag,"2.4.2"}}},
       {metrics,".*",
                {git,"https://github.com/benoitc/erlang-metrics",
                     {tag,"1.0.1"}}},
       {ssl_verify_fun,".*",
                       {git,"https://github.com/deadtrickster/ssl_verify_fun.erl",
                            {tag,"1.1.4"}}}]}.
{profiles,
    [{docs,
         [{deps,
              [{edown,
                   {git,"https://github.com/uwiger/edown.git",
                       {tag,"0.8.1"}}}]},
          {edoc_opts,
              [{doclet,edown_doclet},
               {packages,false},
               {subpackages,true},
               {top_level_readme,
                   {"./README.md","http://github.com/benoitc/hackney"}}]}]},
     {test,[{deps,[{cowboy,"1.0.4"},{jsone,"1.4.7"}]}]}]}.
{dialyzer,[{warnings,[race_conditions,no_return,unmatched_returns,
                      error_handling]},
           {plt_apps,top_level_deps},
           {plt_extra_apps,[]},
           {plt_location,local},
           {plt_prefix,"hackney"},
           {base_plt_location,"."},
           {base_plt_prefix,"hackney"}]}.
{overrides,[]}.
